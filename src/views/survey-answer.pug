extends layout

block style
  link(rel="stylesheet", href="../public/css/survey-form.css")

block main
  h1 #{name}
  p.description #{desc}
  h6 End Date: #{closeDate}
  
  div.options_block
    form(id="survey-form" action="/surveys/1" method="Get")
      div.field 
        input(type="text" placeholder="Our Name" class="input")
      if chooseMany
        each option, index in options
          div.answer_block
            input(class="submit" type="checkbox" name="answer" id="?")
            label(for="?") #{option.value}
      else 
        each option in options
          div.answer_block
            input(class="submit" type="radio" name="answer" id="?")
            label(for="?") #{option.value}
      
      div.submit
        input(class="submit" type="submit" value="Confirm!")