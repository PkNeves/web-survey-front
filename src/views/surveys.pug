extends layout

block style
  link(rel="stylesheet", href="../public/css/survey-form.css")

block main
  div.aligned
    h1 Questions
    div.submit
      button(class="btn success" onclick="newSurvey()") New
  
  div.options_block
    each survey in surveys
      div.answer_block
        div.aligned
          a(href="/"+survey.id)
            span #{survey.name}
        
          button(class="btn warning" onclick=`answers(${survey.id})`) Answers
    
