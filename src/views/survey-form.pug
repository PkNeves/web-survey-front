extends layout

block style
  link(rel="stylesheet", href="../public/css/survey-form.css")

block script 
  script(src="../../../../public/scripts/survey-form.js") 

block main
  div.survey
    button(class="btn warning" onclick="listSurveys()") Back to Surveys
    form(id="survey-form" action="/" method="POST")
      div.field
        input(
            type="text"
            class="input"
            name="name" 
            placeholder="What question is on your mind?"
          )

      div.field
        input(
            type="textarea"
            class="input"
            name="desc" 
            placeholder="You can elaborate here if you want..."
          )

      div.spaceBetween
        label Should we add an end date?
        input(type="date" class="input" name="closeDate")

      div.field
        label(class="switch" for="checkbox") 
          div Can people give multiple answers?
          input(type="checkbox" name="chooseMany" id="checkbox")
          div(class="slider round")

      div.spaceBetween
        h2 Create answer
        a(href="#" class="inlineBtn newAnswer") &plus;

      div.answers

      div.submit
        input(class="submit" type="submit" value="Create!")
